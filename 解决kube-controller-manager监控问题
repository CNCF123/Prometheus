  labels:
    k8s-app: kube-controller-manager
  name: kube-controller-manage-monitor
  namespace: kube-system
subsets:
- addresses:
  - ip: 192.168.x.x
  ports:
  - name: http-metrics
    port: 10252
    protocol: TCP
